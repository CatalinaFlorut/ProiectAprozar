@page
@model ProiectAprozar.Pages.Fructe.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editare</h1>

<h4>Produse</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Fruct.Denumire" class="control-label"></label>
                <input asp-for="Fruct.Denumire" class="form-control" />
                <span asp-validation-for="Fruct.Denumire" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fruct.Pret" class="control-label"></label>
                <input asp-for="Fruct.Pret" class="form-control" />
                <span asp-validation-for="Fruct.Pret" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fruct.TaraOrigine" class="control-label"></label>
                <input asp-for="Fruct.TaraOrigine" class="form-control" />
                <span asp-validation-for="Fruct.TaraOrigine" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="table">
                    <table>
                        <tr>
                            @{
                                int cnt = 0;
                                foreach (var cat in Model.CategorieDataList)
                                {
                                    if (cnt++ % 2 == 0)
                                    {
                                    @:</tr><tr>
                                    }
                                    @:<td>
                                        <input type="checkbox"
                                               name="selectedCategorii"
                                               value="@cat.CategorieID"
                                               @(Html.Raw(cat.Assigned ? "checked=\"checked\"" : "")) />
                                        @cat.CategorieID @: @cat.Nume
                                    @:</td>
                                }
                            @:</tr>
                            }

                        </table>
                    </div>
                </div>
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
            </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
