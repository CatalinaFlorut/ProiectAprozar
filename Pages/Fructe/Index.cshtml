@page "/{id:int?}"
@model ProiectAprozar.Pages.Fructe.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Produse</h1>

<p>
    <a asp-page="Create">Creare</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fruct[0].Denumire)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fruct[0].TaraOrigine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fruct[0].Pret)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fruct[0].FructCategorii)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fruct[0].Furnizor.Denumire)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.FructD.Fructe)
        {

            string selectedRow = "";
            if (item.ID == Model.FructID)
            {
                selectedRow = "table-success";
            }
        <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.Denumire)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TaraOrigine)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pret) lei/kg

            </td>
            <td>
                @{
                    foreach (var categorie in item.FructCategorii)
                    {
                        @categorie.Categorie.ID @: @categorie.Categorie.DenumireCategorie <br />
                    }
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Furnizor.Denumire)

            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>|
                <a asp-page="/Cosuri/Create" asp-route-id="@item.ID">Adauga in cos</a>
            </td>
        </tr>
        }
    </tbody>
</table>
